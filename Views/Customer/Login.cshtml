@model EcomercerWebsite_Fruit.DataTransferObject.LoginData
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="col-sm-6 col-lg-12 mb-3">
        <div class="title-left">
            <h3>Account Login</h3>
        </div>
        <h5><a data-toggle="collapse" href="#formLogin" role="button" aria-expanded="false">Click here to Login</a></h5>
        <form class="mt-3 collapse review-form-box" asp-action="Login" asp-controller="Customer" asp-route-returnurl="@ViewBag.returnUrl" id="formLogin">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="@Model.Email" class="mb-0">Email Address</label>
                    <input type="email" class="form-control" asp-for="@Model.Email" placeholder="Enter Email">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.Password" class="mb-0">Password</label>
                    <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Password">
                </div>
            </div>
            <button type="submit" class="btn hvr-hover">Login</button>
        </form>
    </div>
</div>

