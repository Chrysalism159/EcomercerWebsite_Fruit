@model EcomercerWebsite_Fruit.DataTransferObject.dtoCustomer
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="col-sm-6 col-lg-12 mb-3">
        <div class="title-left">
            <h3>Create New Account</h3>
        </div>
        <h5><a data-toggle="collapse" href="#formRegister" role="button" aria-expanded="true">Click here to Register</a></h5>
        <form class="mt-3 collapse review-form-box" id="formRegister" asp-action="Register" asp-controller="Customer" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="@Model.CustomerName" class="mb-0">Full Name</label>
                    <input type="text" class="form-control" asp-for="@Model.CustomerName" id="InputName" placeholder="Full Name">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.CustomerGender" class="mb-0">Gender</label><br />
                    <select asp-for="@Model.CustomerGender">
                        <option value="true">Male</option>
                        <option value="false">Female</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.CustomerDoB" class="mb-0">Birthday</label>
                    <input type="date" class="form-control" asp-for="@Model.CustomerDoB">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.CustomerAddress" class="mb-0">Address</label>
                    <input type="text" class="form-control" asp-for="@Model.CustomerAddress" placeholder="123 street....">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.CustomerPhone" class="mb-0">Phone Number</label>
                    <input type="text" class="form-control" asp-for="@Model.CustomerPhone" placeholder="Telephone number">
                </div>
                <div class="form-group col-md-6">
                    <label for="imagesFile" class="mb-0">Avatar</label>
                    <input type="file" class="form-control" name="imagesFile">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.CustomerEmail" class="mb-0">Email Address</label>
                    <input asp-for="@Model.CustomerEmail" type="email" class="form-control" id="InputEmail1" placeholder="Enter Email">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.CustomerPassword" class="mb-0">Password</label>
                    <input type="password" asp-for="@Model.CustomerPassword" class="form-control" id="InputPassword1" placeholder="Password">
                </div>
            </div>
            <button type="submit" class="btn hvr-hover">Register</button>
        </form>
    </div>
</div>


