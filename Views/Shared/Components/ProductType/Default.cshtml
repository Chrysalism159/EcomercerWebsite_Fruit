@model IEnumerable<EcomercerWebsite_Fruit.DataTransferObject.ProductTypeDTO>

    <div class="title-left">
        <h3>Categories</h3>
    </div>
    <div class="list-group list-group-collapse list-group-sm list-group-tree" id="list-group-men" data-children=".sub-men">
        @foreach(var item in Model)
        {
            <div class="list-group-collapse sub-men">
            <a class="list-group-item list-group-item-action" asp-action="Index" asp-controller="Cart" asp-route-type ="@item.ProductTypeID" aria-controls="sub-men1">
                @item.ProductTypeName <small class="text-muted">(@item.ProductAmount)</small>
            </a>
            
        </div>
        }
        
    </div>